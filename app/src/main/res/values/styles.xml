<resources>

    <!-- Base application theme. -->
    <style name="ConciergeTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/tag_red</item>
        <item name="android:actionBarStyle">@style/ConciergeActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ConciergeActionBar</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ConciergeActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/tag_green</item>
        <item name="android:titleTextStyle">@style/ConciergeActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@color/tag_green</item>
        <item name="titleTextStyle">@style/ConciergeActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="ConciergeActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
